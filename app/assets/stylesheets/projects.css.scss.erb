			/* @include rounded(3px); */
			color : black;
		    }
		    .subsubnav {
			font-size : 12px;
			padding-left : 20px;
			color : red;
			.selected {
			    color : black;
			}
		    }
		}
	    }
	}
    }
    
    .list-content {
	padding-top : 10px;
	.project_pagination_bottom {
	    margin-top : 15px;
	    text-align : center;
	}
	
	.title-content {
	    margin-left : 20px;
	    margin-bottom : 10px;
	    border : 2px solid $color_grey;
	    padding : 11px;
	    h3 {
		text-align : center;
		font-weight : bold;
		margin-bottom : 0px;
		font-size : 16px;
	    }
	    @include rounded(4px);
	}
	.project-unity {   
	    margin-bottom : 20px;
	    height : 280px;
	    border : 1px solid $color_grey;
	    
	    @include rounded(5px);
	    .pu-image {
		margin : 0 auto;
		width : 320px;
		position : relative;
		#play {
		    position : absolute;
		    background-image : asset_url("play-nop.png", image);
		    height : 74px;
		    width : 72px;
		    top : 60px;
		    left : 125px;
		    z-index : 50;
		}
		#play:hover {
		    top : 58px;
		    background-image : asset_url("play-hover.png", image);   
		}

	    }
	    .metadata {
		background : asset_url("css/intro-show.png", image);
		height : 100px;
		.meta {
		    height : 90px;
		    position : relative;
		    padding : 10px;
		    .pu-title {
			font-size : 17px;
			color : $color_orange;
			font-weight : bold;
		    }
		    .pu-author {
			position : absolute;
			right : 5%;
			top : 13%;
			color : white;
			font-size : 11px;
		    }
		    .pu-time {
			position : absolute;
			bottom : 20%;
			left : 3%;

			color : white;
			font-size : 11px;
		    }
		}
	    }
	}
    }
    .project-unity:hover {
	opacity : 0.8;
    }

}

#investir-btn {
    position : fixed;
    right : 2%;
    top : 2%;
