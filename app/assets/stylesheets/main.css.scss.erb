.header-menu {

    height : 23px;
    padding-top : 3px;
    padding-bottom : 5px;
    background : asset_url("css/menu.jpg", image);

    ul.topnav {
	list-style: none;

	margin : 2px 10px 0 0;
	font-size: 1.0em;
	li {

	    float: left;
	    margin: 0;
	    padding: 0 15px 0 0;
	    position: relative; /*--Declare X and Y axis base for sub navigation--*/
	    a {
		padding : 2px 5px 3px 5px;
		color: #fff;
		display: block;
		float: left;
		:hover{
		    color : black;
		    background-color : #EA8606;
		    @include rounded(3px);
		}
	    }
	    .selected {
		color : black;
		// background-color : #EA8606;
		background-color : white;
		@include rounded_top(3px);
	    }

	    span { /*--Drop down trigger styles--*/
		width: 17px;
		height: 65px;
		float: left;
		.subhover {background-position: center bottom; cursor: pointer;} /*--Hover effect for trigger--*/
	    }
	    ul.subnav {
		z-index : 25;
		list-style: none;
		position: absolute; /*--Important - Keeps subnav from affecting main navigation flow--*/
		left: 0; 
		top: 26px;
		margin: 0; 
		padding: 0;
		display: none;
		float: left;
		width: 165px;
		font-size : 13px;
		background-color : #333;

		li {

		    list-style-type : none;
		    margin: 0; 
		    padding: 0;
		    border-top: 1px solid #252525; /*--Create bevel effect--*/
		    border-bottom: 1px solid #444; /*--Create bevel effect--*/
		    clear: both;
		    .selected {
			border-radius: 0px 0px 0px 0px;
			background-color : #333;
			color : $color_orange;
		    }
		    a {
			float: left;
			width: 160px;
			padding : 5px 0 5px 5px;
		    }
		    a:hover {
			background-color : $color_orange;
			color : black;
			font-weight : bold;
		    }
		}
	    }	    
	}
    }
}

