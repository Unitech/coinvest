

<style>
.wym_html textarea {height: 500px !important;}
.wym_iframe iframe {height: 500px !important;}
</style>

<script type="text/javascript" src="/js/tiny_mce/tiny_mce.js"></script>

<script language="javascript" type="text/javascript">
        tinyMCE.init({
            mode : "textareas",
            theme : "advanced",
            convert_urls : false,
            plugins : "autolink,lists,spellchecker,pagebreak,style,layer,table,save,advhr,advimage,advlink,emotions,iespell,inlinepopups,insertdatetime,preview,media,searchreplace,print,contextmenu,paste,directionality,fullscreen,noneditable,visualchars,nonbreaking,xhtmlxtras,template",
            theme_advanced_buttons1 : "undo,redo,|,bold,italic,underline,separator,bullist,numlist,link|,justifyleft,justifycenter,justifyright,justifyfull,|,styleselect,formatselect,fontselect,fontsizeselect",
            theme_advanced_buttons2 : "outdent,indent,blockquote,|,link,unlink,anchor,image,cleanup,help,code,|,insertdate,inserttime,preview,|,forecolor,backcolor,|,tablecontrols,|,hr,removeformat,visualaid,|,insertdate,inserttime,preview",
            theme_advanced_buttons3 : "",
            theme_advanced_toolbar_location : "top",
            theme_advanced_toolbar_align : "left",
        extended_valid_elements : "a[name|href|target|title|onclick],img[class|src|border=0|alt|title|hspace|vspace|width|height|align|onmouseover|onmouseout|name],hr[class|width|size|noshade],font[face|size|color|style],span[class|align|style]"
        });
</script>


<div class="edit-project">
  <%= form_for :project, :url => {:action => :submit}, :html => { :multipart => true }  do |f| %>

  <div class="fields">
    <%= f.hidden_field :id %>
    <p>
      <%= f.label :title, "Titre du projet" %>
      <%= f.text_field :title, :size => 50 %>
    </p>
    <p>
      <%= f.label :short_descr, "Description courte (max 140 caractères)" %>
      <%= f.text_field :short_descr, :size => 50 %>
    </p>
    <p>
      <%= f.label :you_tube, "Vidéo YouTube (lien)" %>
      <%= f.text_field :you_tube, :size => 50 %>
    </p>
    <p>
      <%= f.label :wish_money, "Argent demandé" %>
      <%= f.text_field :wish_money, :size => 15 %> <b>€</b>
    </p>
    <p>
      <%= f.label :project_image, "Image de présentation du projet (taille de 640 x 360)" %>
      <% if @project.project_image? %>    
	<%= image_tag @project.project_image.url(:thumb) %>
      <% else %>
	<div class="empty-320">
	  <div class="content">
	    640 x 360
	  </div>
	</div>
      <% end %>
      <br/>
      <%= f.file_field :project_image %> (Format obligatoire de 640x360)
    </p>
    <p>
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, :cols => 100, :rows => 50 %>
    </p>
    
    <br/>
    <center>
      <%= f.submit  "Confirmer les modifications", :class => 'wymupdate' %>
    </center>
<% end %>
</div>
