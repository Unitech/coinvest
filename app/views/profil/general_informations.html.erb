
<div class="general-informations">

<%= form_for(@user, :url => {:action => :general_informations_submit}, :html => {:class => 'form'}) do |f| %>
  
  <%= render :partial => "shared/error", :locals => {:object => @user } %>


  <p><%= f.label :f_name, 'PrÃ©nom' %>
  <%= f.text_field :f_name %></p>

  
  <%= f.label :l_name, 'Nom' %>
  <%= f.text_field :l_name %>
  
  
  <%= f.label :address, 'Adresse' %>
  <%= f.text_field :address %>
  
  <%= f.label :postal_code, 'Code postal' %>
  <%= f.text_field :postal_code %>
  
  <%= f.label :city, 'Ville' %>
